#!/usr/bin/env node
var program = require('commander'),
    package = require('../package.json');

program
  .version(package.version)
  //.option('-n, --number [number]', 'Number of radiodan instances [1]', 1)
  .usage('[options] mpd_paths')
  .parse(process.argv);

if (program.args.length == 0) {
  program.help();
}
 
var Radiodan = require('../lib/radiodan');

for(var i=0; i < program.args.length; i++) {
  Radiodan.instance({path: program.args[i]}).start();
}
