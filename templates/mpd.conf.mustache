port                    "{{{port}}}"
music_directory         "{{{music}}}"
playlist_directory      "{{{playlist}}}"
db_file                 "{{{db}}}"
log_file                "{{{log}}}"
zeroconf_name           "radiodan_mpd_{{{port}}}"

{{#coreAudio}}
audio_output {
    type "osx"
    name "CoreAudio"
    mixer_type "software"
}
{{/coreAudio}}

{{#alsa}}
audio_output {
    type            "alsa"
    name            "Speakers"
    device          "hw:0,0"
    format          "44100:16:2"
    mixer_type      "software"
}
{{/alsa}}

{{#httpStreaming}}
audio_output {
    type            "httpd"
    name            "Web Stream"
    encoder         "lame"
    port            "{{{httpPort}}}"
    bind_to_address "0.0.0.0"
    bitrate         "128"
    format          "44100:16:1"
    max_clients     "0"
}
{{/httpStreaming}}
